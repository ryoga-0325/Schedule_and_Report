<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/today_schedule.css' />
    <title>スケジュール一覧</title>
    <script>
        const dayScheduleDataArr = <%- JSON.stringify(dayScheduleDatas) %>;
    </script>
</head>

<body>
    <p id="login_userid" title="<%= loginUserId %>"></p>
    <div class="login_user">
        <p>
            <%= loginUserName %>さん　ログイン中
        </p>
    </div>
    <div class="schedule-body">
        <div class="schedule-block">
            <div class="schedule-header">
                <h2>
                    <%= date %>
                </h2>
                <form action="/calendar" method="post">
                    <button type="submit" id="back">戻る</button>
                </form>
            </div>
            <table border="1" class="schedule_table" id="schedule_table" data-lang="ja">
                <thead id="schedule_table_head">
                    <tr>
                        <th>名前</th>
                        <th>予定</th>
                    </tr>
                </thead>
                <tbody id="schedule_table_body"></tbody>
            </table>
        </div>
    </div>
    <script src="javascripts/today_schedule.js" type="text/javascript"></script>
</body>

</html>